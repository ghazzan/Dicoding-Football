<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailEventView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlToolbarEventDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar_detail_event"/>
        <ImageView
            android:id="@+id/ivEventFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_add_favorite"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlToolbarEventDetail">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <android.support.constraint.Guideline
                android:id="@+id/lineEventCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvEventVsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vs"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/lineEventCenter"
                app:layout_constraintRight_toRightOf="@+id/lineEventCenter"
                app:layout_constraintTop_toTopOf="@+id/ivEventHome"
                app:layout_constraintBottom_toBottomOf="@+id/ivEventHome"
                />

            <TextView
                android:id="@+id/tvEventHomeScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                app:layout_constraintRight_toLeftOf="@+id/tvEventVsTitle"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvEventVsTitle"/>

            <TextView
                android:id="@+id/tvEventAwayScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvEventVsTitle"
                app:layout_constraintLeft_toRightOf="@+id/tvEventVsTitle"/>

            <ImageView
                android:id="@+id/ivEventHome"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventDate"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/ivEventAway"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEventDate"/>

            <TextView
                android:id="@+id/tvEventHomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/ivEventHome"
                app:layout_constraintLeft_toLeftOf="@+id/ivEventHome"
                app:layout_constraintRight_toRightOf="@+id/ivEventHome"/>

            <TextView
                android:id="@+id/tvEventAwayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/ivEventAway"
                app:layout_constraintLeft_toLeftOf="@+id/ivEventAway"
                app:layout_constraintRight_toRightOf="@+id/ivEventAway"/>

            <TextView
                android:id="@+id/tvEventHomeFormation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventHomeTitle"
                app:layout_constraintLeft_toLeftOf="@+id/tvEventHomeTitle"
                app:layout_constraintRight_toRightOf="@+id/tvEventHomeTitle" />

            <TextView
                android:id="@+id/tvEventAwayFormation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventAwayTitle"
                app:layout_constraintLeft_toLeftOf="@+id/tvEventAwayTitle"
                app:layout_constraintRight_toRightOf="@+id/tvEventAwayTitle" />

            <View
                android:id="@+id/lineHorizontal1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventHomeFormation"/>

            <LinearLayout
                android:id="@+id/llEventGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/lineHorizontal1">
                <TextView
                    android:id="@+id/tvEventGoalsHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/tvEventGoalsAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvEventShotsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Shots"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/llEventGoals"
                app:layout_constraintLeft_toLeftOf="@+id/lineEventCenter"
                app:layout_constraintRight_toRightOf="@+id/lineEventCenter"/>

            <TextView
                android:id="@+id/tvEventShotsHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvEventShotsTitle" />

            <TextView
                android:id="@+id/tvEventShotsAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvEventShotsTitle"/>

            <View
                android:id="@+id/lineHorizontal2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventShotsTitle"/>

            <TextView
                android:id="@+id/tvEventLineupsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lineups"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@+id/lineEventCenter"
                app:layout_constraintRight_toRightOf="@+id/lineEventCenter"
                app:layout_constraintTop_toBottomOf="@+id/lineHorizontal2" />

            <TextView
                android:id="@+id/tvEventGoalkeeperTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Keeper"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/lineEventCenter"
                app:layout_constraintRight_toRightOf="@+id/lineEventCenter"
                app:layout_constraintTop_toBottomOf="@+id/tvEventLineupsTitle"/>

            <TextView
                android:id="@+id/tvEventGoalkeeperHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toLeftOf="@+id/tvEventGoalkeeperTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvEventGoalkeeperTitle"/>

            <TextView
                android:id="@+id/tvEventGoalkeeperAway"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="end"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@+id/tvEventGoalkeeperTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvEventGoalkeeperTitle"/>

            <LinearLayout
                android:id="@+id/llEventDefense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventGoalkeeperTitle">
                <TextView
                    android:id="@+id/tvEventDefenseHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defense"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/tvEventDefenseAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEventMidfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/llEventDefense">
                <TextView
                    android:id="@+id/tvEventMidfieldHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Midfield"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/tvEventMidfieldAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEventForward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/llEventMidfield">
                <TextView
                    android:id="@+id/tvEventForwardHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forward"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/tvEventForwardAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEventSubstitutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/llEventForward">
                <TextView
                    android:id="@+id/tvEventSubstitutesHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Substitutes"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/tvEventSubstitutesAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlDetailLoading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</RelativeLayout>